doctype html
html(lang="pl")
  head
    meta(name='viewport', content='width=device-width')
    meta(charset='utf-8')
    link(rel="stylesheet", href="/styles/sass/style.css")
    title Rejestracja
  body
    header
      .container
        .brand
          img.logo(src="/ticketsy.png", alt="Ticketsy Logo")
        nav
          ul.nav-list
            li
              a(href="/") Home
            li
              a(href="/events") Events
            if isLoggedIn
              li
                a.btn(href="/logout") Wyloguj
            else
              li
                a(href="/login") Login
              li
                a.btn(href="/register") Sign Up

    main
      .form-container
        .form-card
          h1 Stwórz konto
          p.form-subtitle Dołącz do Ticketsy
          
          form.form(action="/register" method="POST")
            .form-group
              label(for="email") Email
              input#email(type="email" name="email" placeholder="twoj@email.com" required)
              .invalid-feedback#email-error Email musi zawierać @ i .
            
            .form-group
              label(for="password") Hasło
              input#password(type="password" name="password" placeholder="Stwórz hasło" required)
              .invalid-feedback#password-error Hasło musi mieć min. 8 znaków, wielką literę, cyfrę i znak specjalny
            
            .form-group
              label(for="confirm-password") Potwierdź Hasło
              input#confirm-password(type="password" name="confirmPassword" placeholder="Potwierdź swoje hasło" required)
              .invalid-feedback#confirm-password-error Hasła nie są takie same
            
            button.btn.btn-full(type="submit") Stwórz Konto
          
          p.form-footer Masz już konto?
            a(href="/login") Zaloguj się
    footer.footer
      .container
        .footer-content
          .footer-section
            h3 Ticketsy
            p Twoje miejsce do odkrywania i kupowania biletów na najlepsze wydarzenia.
          
          .footer-section
            h3 Szybkie linki
            ul.footer-links
              li
                a(href="/") Strona główna
              li
                a(href="/events") Wydarzenia
              li
                a(href="/about") O nas
              li
                a(href="/contact") Kontakt
        
        .footer-bottom
          p &copy; 2025 Ticketsy. Wszelkie prawa zastrzeżone. | Projekt portfolio
  script(src="frontend/register-pass.js") 