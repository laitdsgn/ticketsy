doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(charset='utf-8')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles/sass/style.css")
    link(rel="stylesheet", href="/styles/sass/cms-style.css")
    title CMS
  body
    header
      .container
        .brand
          img.logo(src="/ticketsy.png", alt="Ticketsy Logo")
        nav
          ul.nav-list
            li
              a(href="/") Home
            li
              a(href="/events") Events
            if isLoggedIn
              li
                a.btn(href="/logout") Wyloguj
            else
              li
                a(href="/login") Login
              li
                a.btn(href="/register") Sign Up
  main 
      .panel-options-grid
        .card
          .card-content
            form(action="/admin-panel" method="POST" enctype="multipart/form-data")
              h2.mb-3 Dodaj Event
              .card-inputs
                input.form-control.mb-2(type="text", name="title" placeholder="Tytuł")
                input.form-control.mb-2(type="text", name="description" placeholder="Opis")
                input.form-control.mb-2(type="date", name="data" placeholder="Data")
                input.form-control.mb-2(type="text", name="location" placeholder="Miejsce wydarzenia")
                input.form-control.mb-2(type="number", name="price" placeholder="Cena")
                input.form-control.mb-2(type="number", name="totalSeats" placeholder="Całkowita liczba miejsc np. 100")
                input.form-control.mb-3(type="file", name="thumbnail" accept="image/png, image/gif, image/jpeg")
              button(type="submit").btn.btn-primary Zaakceptuj
        .card
          h2.mb-3 Aktualne eventy
          table.table.table-sm.table-striped
            thead
              tr
                th Tytuł
                th Data
                th Cena
            tbody
              tr
                td Summer Music Festival
                td 15.08.2025
                td 45 zł
              tr
                td Tech Conference 2025
                td 10.09.2025
                td 120 zł
              tr
                td Comedy Night Special
                td 22.07.2025
                td 35 zł
        .card
          h2.mb-3 Użytkownicy
          table.table.table-sm.table-striped
            thead
              tr
                th Email
                th Rola
                th Status
            tbody
              tr
                td jan.kowalski@email.pl
                td Admin
                td Aktywny
              tr
                td anna.nowak@email.pl
                td User
                td Aktywny
              tr
                td piotr.wisniewski@email.pl
                td User
                td Nieaktywny
        .card
          h2 analityka
        .card
          h2 test DB
        .card
          h2.mb-3 Informacje
          p.small.text-muted &copy; 2025 Ticketsy. Wszelkie prawa zastrzeżone.
          p.small.text-muted Panel administracyjny v1.0
          a.small(href="/docs") Dokumentacja
